create table categories(
name varchar(50) not null unique,
description text,
image text
);

create table posts(
user_id int,
category_id int,
title varchar(255) not null unique,
body text not null,
image text not null,
created_at datetime not null,
updated_at datetime
);

select * from users;
select * from categories;
select * from posts;

